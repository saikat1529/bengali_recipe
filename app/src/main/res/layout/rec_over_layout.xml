<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/recipe_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_recipe_style">
        <TextView
            android:id="@+id/rec_style_title"
            android:text="Recipe Title"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rec_style_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provided by: Zakaria Kabir"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="italic"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"/>
        <ImageView
            android:id="@+id/recipe_main_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/food"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/saved_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="@color/white"
                android:gravity="left"
                android:padding="5dp"
                android:drawableLeft="@android:drawable/star_big_off"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/cooked_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cook"
                android:textColor="@color/white"
                android:gravity="right"
                android:padding="5dp"
                android:textStyle="bold"
                android:drawableRight="@android:drawable/star_big_off"
                android:textSize="26sp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/view_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="10dp"
        android:text="View Comments(6)"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="5dp"/>
